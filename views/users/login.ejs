<% layout('./layouts/boilerplate') %>

    <h1 class="display-6 text-center mb-3">Login</h1>
    <div class="row border shadow mb-5 bg-body rounded">
        <div class="col-md-5 d-flex flex-column justify-content-center">
            <form action="/login" method="POST" class="validated-form mt-3 mx-3"
                novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username"
                        id="username" required autofocus>
                    <div class="invalid-feedback">
                        Username is required.
                    </div>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password"
                        id="password" required>
                    <div class="invalid-feedback">
                        Password is required.
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-success mb-5">Login</button>
                </div>
            </form>
        </div>
        <div class="col-md-7 px-0">
            <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
                alt="image of campfire" class="img-fluid" style="height: 100%;">
        </div>
    </div>
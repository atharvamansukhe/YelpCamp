<% layout('./layouts/boilerplate') %>


    <div class="row container-fluid my-3">
        <div class="col-2">
            <a href="/campgrounds" class="btn btn-outline-dark border-0"
                title="Back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                    fill="currentColor" class="bi bi-caret-left-fill"
                    viewBox="0 0 16 16">
                    <path
                        d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                </svg> </a>
        </div>
        <div class="col-8">
            <h1 class="display-6 text-center">Add a new Campground</h1>
        </div>
    </div>
    <div class="col-6 offset-3 container">
        <form action="/campgrounds" method="POST" novalidate
            class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="campground[title]"
                    id="title" required>
                <div class="invalid-feedback">
                    Enter a name for the Campground!
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control"
                    name="campground[location]" id="location" required>
                <div class="invalid-feedback">
                    Enter a location for the Campground!
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control"
                        name="campground[price]" id="price" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Description</label>
                <textarea type="text" class="form-control"
                    name="campground[description]" id="description"
                    required></textarea>
                <div class="invalid-feedback">
                    Enter a description for the Campground!
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div>
                <label class="form-label">Add Image(s)</label>
                <div class="form-file custom-file">
                    <input class="form-control custom-file-input" type="file"
                        id="image" name="image" multiple
                        onchange="previewMultiple(event)">
                    <label for="image"
                        class="form-label custom-file-label"></label>
                </div>
                <div id="formFile" class="mb-5"></div>
            </div>
            <div class="form-check mb-5">
                <input class="form-check-input" type="checkbox" value=""
                    id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-outline-success mb-5">Add
                    Campground</button>
            </div>
        </form>
    </div>
<% layout('./layouts/boilerplate') %>


    <div class="row">
        <div class="col-md-2">
            <a href="/campgrounds" class="btn btn-outline-secondary">
                < </a>
        </div>
        <div class="col-md-8">
            <h1 class="display-6 text-center mt-3">Add a new Campground</h1>
        </div>
    </div>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="campground[title]"
                    id="title" placeholder="Name of the Campground">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control"
                    name="campground[location]" id="location"
                    placeholder="Location of the Campground">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Url</label>
                <input type="text" class="form-control" name="campground[image]"
                    id="image" placeholder="Image of the Campground">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control"
                        name="campground[price]" id="price" placeholder="0.00">
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Description</label>
                <textarea type="text" class="form-control mb-3"
                    name="campground[description]" id="description"
                    placeholder="Add a description"></textarea>
            </div>
            <p> <button class="btn btn-outline-success">Add Campground</button>
            </p>
        </form>
    </div>
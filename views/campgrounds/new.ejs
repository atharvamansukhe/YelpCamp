<% layout('./layouts/boilerplate') %>
    <h1>Add a new Campground</h1>
    <form action="/campgrounds" method="POST">
        <div class="mb-3 col-sm-7">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="campground[title]"
                id="title" placeholder="Name of the Campground">
        </div>
        <div class="mb-3 col-sm-7">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" name="campground[location]"
                id="location" placeholder="Location of the Campground">
        </div>
        <p> <button class="btn btn-outline-success">Add Campground</button> </p>
    </form>
    <p><a href="/campgrounds" class="btn btn-outline-secondary">
            <<< </a>
    </p>
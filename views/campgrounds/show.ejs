<% layout('./layouts/boilerplate') %>
    <div class="row justify-content-between container-fluid">
        <div class="col-2">
            <a href="/campgrounds" class="btn btn-outline-dark border-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                    fill="currentColor" class="bi bi-caret-left-fill"
                    viewBox="0 0 16 16">
                    <path
                        d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                </svg> </a>
        </div>
        <div class="col-8 mb-3">
            <h1 class="display-6 text-center text-dark">
                <%=campground.title%>
            </h1>
            <h4 class="text-center text-secondary fst-italic">
                <%=campground.location%>
            </h4>
        </div>
        <div class="col-2 mb-3">
            <a href="/campgrounds/<%= campground._id %>/edit"
                class="btn btn-outline-warning mb-3 me-3 ms-3 border-0"><svg
                    xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                    fill="currentColor" class="bi bi-pencil-fill"
                    viewBox="0 0 16 16">
                    <path
                        d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                </svg></a>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE"
                method="POST" style="display: inline-block;">
                <button class="btn btn-outline-danger mb-3 ms-3 border-0"><svg
                        xmlns="http://www.w3.org/2000/svg" width="16"
                        height="16" fill="currentColor" class="bi bi-trash-fill"
                        viewBox="0 0 16 16">
                        <path
                            d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                    </svg></button>
            </form>
        </div>
    </div>
    </div>
    <div class="d-flex flex-row mb-5 justify-content-center">
        <h5 class="font-monospace text-muted mt-2 fw-lighter me-5">Price (per
            night) for one adult: $ <%= campground.price %>
        </h5>
        <button class="btn btn-outline-primary border-0 fst-italic">Book
            Now</button>
    </div>
    <div class="row mb-5">
        <div class="col-md-6">
            <img src="<%= campground.image %>" alt=""
                class="img-fluid border shadow mb-5 bg-body rounded">
        </div>
        <div class="col-md-6 d-flex text-center flex-wrap">
            <div>
                <p class="lead mb-5">
                    <%= campground.description %>
                </p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-5 col-md-6">
            <h4 class="text-center mb-3">
                <a class="font-monospace text-secondary"
                    data-bs-toggle="collapse" href="#collapseExample"
                    role="button" aria-expanded="false"
                    aria-controls="collapseExample">
                    Reviews
                </a>
            </h4>
            <div class="collapse" id="collapseExample">
                <div class="card card-body border-0">
                    <% for(let review of campground.reviews) { %>
                        <div class="mb-2 row ms-3">
                            <div class="col-10">
                                <figure class="flex-wrap">
                                    <blockquote class="blockquote">
                                        <p>
                                            <%= review.body %>
                                        </p>
                                    </blockquote>
                                    <figcaption
                                        class="blockquote-footer fst-italic">
                                        Reviewer
                                    </figcaption>
                                </figure>
                            </div>
                            <div class="col-2">
                                <form
                                    action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="POST"
                                    style="display: inline-block;">
                                    <button
                                        class="btn btn-outline-danger mb-3 ms-3 border-0 btn-sm"><svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16" height="16"
                                            fill="currentColor"
                                            class="bi bi-trash"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg></button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
        <div class="mb-5 col-md-6">
            <h4 class="text-center mb-3">
                <a class="font-monospace text-secondary"
                    data-bs-toggle="collapse" href="#collapseExample"
                    role="button" aria-expanded="false"
                    aria-controls="collapseExample">
                    Leave a Review
                </a>
            </h4>
            <div class="collapse" id="collapseExample">
                <div class="card card-body border-0">
                    <form action="/campgrounds/<%= campground._id %>/reviews"
                        method="POST" class="mb-5 validated-form" novalidate>
                        <div class="mb-3">
                            <label for="rating"
                                class="form-label text-secondary">Rating</label>
                            <input type="range" class="form-range" min="1"
                                max="5" name="review[rating]" id="rating">
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary"
                                for="body">Review</label>
                            <textarea class="form-control" name="review[body]"
                                id="body" cols="20" rows="3"
                                required></textarea>
                            <div class="invalid-feedback">
                                Review field cannot be empty.
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button
                                class="btn btn-outline-secondary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>